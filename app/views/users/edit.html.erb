<h1> Edit user </h1>
<p> Please fill in the form below to edit the user. </p>
<%= render partial: 'form' %>
<p> <%= link_to 'Back', users_path %> </p>
<% if @user.errors.any? %>
  <div class="alert alert-danger">
    <h4>There were some errors:</h4>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>