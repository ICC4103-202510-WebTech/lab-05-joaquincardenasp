<h1> Chats </h1>
<p> Welcome to the chats page. </p>
<table class="table"> 
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Sender</th>
      <th scope="col">Receiver</th>
      <th scope="col">Date</th>
      <th scope="col">Details</th>
    </tr>
  </thead>
  <tbody>
  <% @chats.each do |chat| %>
    <tr>
      <th scope="row"><%= chat.id %></th>
      <td><%= chat.sender_id %></td>
      <td><%= chat.receiver_id %></td>  
      <td><%= chat.created_at %></td>
      <td><%= link_to 'Show', chat_path(chat) %></td>
    </tr>
  <% end %> 
  </tbody>
</table>