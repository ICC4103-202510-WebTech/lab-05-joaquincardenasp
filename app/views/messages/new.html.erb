<h1> New message </h1>
<p> Please fill in the form below to create a new message. </p>
<% if @message.errors.any? %>
  <div class="alert alert-danger">
    <h4>There were some errors:</h4>
    <ul>
      <% @message.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= render partial: 'form' %>
<p> <%= link_to 'Back', messages_path %> </p>